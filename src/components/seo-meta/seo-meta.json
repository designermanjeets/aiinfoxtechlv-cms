{
  "collectionName": "components_seo_meta",
  "info": {
    "displayName": "SEO Meta",
    "description": "Reusable SEO metadata component",
    "icon": "search"
  },
  "attributes": {
    "metaTitle": {
      "type": "string",
      "maxLength": 120
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 320
    },
    "keywords": {
      "type": "text"
    },
    "canonicalUrl": {
      "type": "string",
      "maxLength": 500
    },
    "robots": {
      "type": "string",
      "default": "index, follow"
    },
    "ogTitle": {
      "type": "string",
      "maxLength": 120
    },
    "ogDescription": {
      "type": "text",
      "maxLength": 320
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "ogType": {
      "type": "string",
      "default": "website"
    },
    "twitterCard": {
      "type": "string",
      "default": "summary_large_image"
    },
    "twitterTitle": {
      "type": "string",
      "maxLength": 120
    },
    "twitterDescription": {
      "type": "text",
      "maxLength": 320
    },
    "twitterImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}
