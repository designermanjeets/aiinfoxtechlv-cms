{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial",
    "description": "Student testimonials"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "site": {
      "type": "enumeration",
      "enum": ["lv", "main"],
      "required": true,
      "default": "lv"
    },
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "role": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "quote": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0
    }
  }
}
