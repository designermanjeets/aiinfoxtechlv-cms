{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Static content pages (privacy policy, terms, etc.)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "site": {
      "type": "enumeration",
      "enum": ["lv", "main"],
      "required": true,
      "default": "lv"
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo-meta.seo-meta"
    }
  }
}
